# Advanced News Analyzer - Environment Variables
# Copy this to .env and fill in your values

# ===== REQUIRED =====
# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===== AI ANALYSIS =====
# Advanced analysis with Gemini AI (recommended)
RISK_SCORING=on
GEMINI_API_KEY=your_gemini_api_key_here

# ===== NEWS SOURCES =====
# NewsAPI for additional news sources (optional)
NEWS_API_KEY=your_newsapi_key_here

# RSS and Polling Configuration
ENABLE_RSS=true
ENABLE_POLLING=true
POLLING_INTERVAL=5

# ===== FILTERING =====
# Keywords for news filtering (comma-separated)
KEYWORDS=tariff,tariffs,breaking,fed,interest rates,inflation,earnings,stock,market,trading,SEC,regulation,sanctions,trade war,merger,acquisition,ipo,crypto,bitcoin,ethereum

# Market-specific keywords
MARKET_KEYWORDS=S&P,SPY,QQQ,NASDAQ,DOW,VIX,treasury,bond,yield,dollar,EUR,oil,gold,silver

# Analysis thresholds (1-5 scale)
MIN_IMPACT_SCORE=2
MIN_URGENCY_SCORE=2

# ===== DETECTION RULES =====
# Time window for event clustering (seconds)
WINDOW_SEC=300

# Minimum unique sources to trigger alert
MIN_UNIQUE_ACCOUNTS=2

# ===== WEBHOOK SECURITY =====
# Secret for Apify webhook (if using social media monitoring)
APIFY_WEBHOOK_SECRET=your_webhook_secret_here

# ===== REAL MONEY TRADING SYSTEM =====
# ⚠️ CRITICAL: These settings control real money trades!

# Twitter accounts to monitor (REQUIRED for trading signals)
TWITTER_ACCOUNT_1=account1
TWITTER_ACCOUNT_2=account2

# IBKR (Interactive Brokers) Configuration
IBKR_HOST=localhost
IBKR_PORT=5000
IBKR_ACCOUNT_ID=your_ibkr_account_id
IBKR_CLIENT_ID=1

# SPX Options Configuration
SPX_CONTRACT_SIZE=1
OPTION_TYPE=CALL
MAX_DAILY_LOSS=5000

# Safety Controls (IMPORTANT!)
DRY_RUN=true
REQUIRE_CONFIRMATION=false

# ===== SERVER =====
# Server port
PORT=8080